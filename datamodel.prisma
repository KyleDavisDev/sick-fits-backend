enum Permission {
  ADMIN
  USER
  ITEMCREATE
  ITEMUPDATE
  ITEMDELETE
  PERMISSIONUPDATE
}

type User {
  id: ID! @id @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpire: Float
  permissions: [Permission] @scalarList(strategy:RELATION)
}

type Item {
  id: ID! @id @unique
  title: String!
  description: String!
  image: String
  largeImage: String
  price: Int!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  user: User! 
}

type CartItem {
  id: ID! @id @unique
  quantity: Int! @default(value: 1)
  item: Item
}

type Cart {
  id: ID! @id @unique
  items: [CartItem]!
  user: User!
  created: Int!
  updated: Int!
  isActive: Boolean! @default(value: true)
}

type OrderItem {
  id: ID! @id @unique
  title: String!
  description: String!
  image: String
  largeImage: String
  price: Int!
  quantity: Int! @default(value: 1)
  user: User! 
}

type Order {
  id: ID! @id @unique
  items: [OrderItem]!
  user: User
  created: Int!
  updated: Int!
  charge: String!

}